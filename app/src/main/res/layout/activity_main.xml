<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="641dp"
        android:layout_height="379dp"
        android:fontFamily="sans-serif-black"
        android:text="Help me!"
        android:textColor="#3F51B5"
        android:textSize="125sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/imageView.egg"
        android:layout_width="398dp"
        android:layout_height="390dp"
        android:onClick="knock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/greenegg"
        tools:layout_editor_absoluteY="637dp" />

    <TextView
        android:id="@+id/textView_counter"
        android:layout_width="153dp"
        android:layout_height="165dp"
        android:layout_marginTop="224dp"
        android:layout_marginBottom="1049dp"
        android:fontFamily="sans-serif-black"
        android:text="10"
        android:textColor="#3F51B5"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView.egg"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button.reset"
        android:layout_width="423dp"
        android:layout_height="229dp"
        android:onClick="reset"
        android:text="reset"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_counter"
        app:layout_constraintVertical_bias="0.292" />

</androidx.constraintlayout.widget.ConstraintLayout>